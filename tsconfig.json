{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"incremental": true
	},
	"include": [
		"src/**/*.ts",
	]
}
